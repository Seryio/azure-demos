{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "defaultValue": "sergio",
      "metadata": {
        "description": "User name for the Virtual Machine."
      }
    },
    "sshPublicKey": {
      "type": "string",
      "defaultValue": "ssh-rsa  sergio@MININT-SCP2P2V"
    },
    "dnsLabelPrefix": {
      "type": "string",
      "defaultValue": "k8scluster",
      "metadata": {
        "description": "Unique DNS Name for the Public IP used to access the Virtual Machine."
      }
    },
    "ubuntuOSVersion": {
      "type": "string",
      "defaultValue": "17.04", 
      "metadata": {
        "description": "The Ubuntu version for the VM."
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat('storacc',  parameters('dnsLabelPrefix'))]",
    "storageAccountType": "Standard_LRS",
    "imagePublisher": "Canonical",
    "imageOffer": "UbuntuServer",
    "vmSize": "Standard_DS1_V2",
    "publicIPAddressType": "Dynamic",

    "vnet_netPrefix": "10.0.0.0/16",
    "vnet_vnetName": "vnet1",
    "vnet_ID": "[resourceId('Microsoft.Network/virtualNetworks',variables('vnet_vnetName'))]",
    "vnet_subnetPrefix": "10.0.0.0/24",
    "vnet_subnetName": "vnet1_subnet1",
    "vnet_subnetRef": "[concat(variables('vnet_ID'),'/subnets/',variables('vnet_subnetName'))]",

    "vm1_vmName": "k8smaster1",
    "vm1_role": "master",
    "vm1_dnsLabelPrefix": "[concat(variables('vm1_vmName'),'.',parameters('dnsLabelPrefix'))]",
    "vm1_nicName": "[concat('nic', '.',variables('vm1_dnsLabelPrefix') )]",
    "vm1_publicIPAddressName": "[concat('publicip', '.', variables('vm1_dnsLabelPrefix'))]",

    "vm2_vmName": "k8sworker1",
    "vm2_role": "worker",
    "vm2_dnsLabelPrefix": "[concat(variables('vm2_vmName'),'.',parameters('dnsLabelPrefix'))]",
    "vm2_nicName": "[concat('nic', '.',variables('vm2_dnsLabelPrefix') )]",
    "vm2_publicIPAddressName": "[concat('publicip', '.', variables('vm2_dnsLabelPrefix'))]",

    "vm3_vmName": "k8sworker2",
    "vm3_role": "worker",
    "vm3_dnsLabelPrefix": "[concat(variables('vm3_vmName'),'.',parameters('dnsLabelPrefix'))]",
    "vm3_nicName": "[concat('nic', '.',variables('vm3_dnsLabelPrefix') )]",
    "vm3_publicIPAddressName": "[concat('publicip', '.', variables('vm3_dnsLabelPrefix'))]",

    "vm4_vmName": "k8sworker3",
    "vm4_role": "worker",
    "vm4_dnsLabelPrefix": "[concat(variables('vm4_vmName'),'.',parameters('dnsLabelPrefix'))]",
    "vm4_nicName": "[concat('nic', '.',variables('vm4_dnsLabelPrefix') )]",
    "vm4_publicIPAddressName": "[concat('publicip', '.', variables('vm4_dnsLabelPrefix'))]",

    "vm5_vmName": "k8smaster2",
    "vm5_role": "master",
    "vm5_dnsLabelPrefix": "[concat(variables('vm5_vmName'),'.',parameters('dnsLabelPrefix'))]",
    "vm5_nicName": "[concat('nic', '.',variables('vm5_dnsLabelPrefix') )]",
    "vm5_publicIPAddressName": "[concat('publicip', '.', variables('vm5_dnsLabelPrefix'))]",

  },
  "resources": [
  
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "[variables('storageAccountType')]"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('vnet_vnetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnet_netPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('vnet_subnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnet_subnetPrefix')]"
            }
          }
        ]
      }
    },

    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('vm1_publicIPAddressName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIPAddressType')]"
      }
    },
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('vm1_nicName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses/', variables('vm1_publicIPAddressName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/', variables('vnet_vnetName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('vm1_publicIPAddressName'))]"
              },
              "subnet": {
                "id": "[variables('vnet_subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vm1_vmName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "role": "[variables('vm1_role')]",
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces/', variables('vm1_nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('vmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('vm1_vmName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": "true",
            "ssh": {
              "publicKeys": [
                {
                  "path": "[concat('/home/',parameters('adminUsername'),'/.ssh/authorized_keys')]",
                  "keyData": "[parameters('sshPublicKey')]"
                }
              ]
            }
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[parameters('ubuntuOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "diskSizeGB": "1023",
              "lun": 0,
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('vm1_nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), '2016-01-01').primaryEndpoints.blob)]"
          }
        }
      }
    },



